#footer-post
  position: fixed
  right: 0
  bottom: 0
  left: 0
  z-index: 5000000
  width: 100%
  .light &
    border-top: 1px solid $color-light-border
    background: $color-light-footer-mobile-1
  .night &
    border-top: 1px solid $color-night-border
    background: $color-night-footer-mobile-1
  transition: opacity .2s

  a
    background: none
    color: inherit
    text-decoration: none

  a.icon
    background: none

    .light &:hover
      color: $color-light-link
    .night &:hover
      color: $color-night-link

  #nav-footer
    padding-right: 1rem
    padding-left: 1rem
    .light &
      background: $color-light-footer-mobile-2
    .night &
      background: $color-night-footer-mobile-2
    text-align: center

    a
      .light
        color: $color-light-accent-1
      .night
        color: $color-night-accent-1
      font-size: 1em

    a:hover
      .light &
        underline(5px, $color-light-accent-1)
      .night &
        underline(5px, $color-night-accent-1)

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 10px
        width: 20%
        vertical-align: middle

  #actions-footer
    overflow: auto
    margin-top: 1rem
    margin-bottom: 1rem
    padding-right: 1rem
    padding-left: 1rem
    width: 100%
    text-align: center
    white-space: nowrap

    a
      display: inline-block
      padding-left: 1rem
      .light
        color: $color-light-accent-1
      .night
        color: $color-night-accent-1

  #share-footer
    padding-right: 1rem
    padding-left: 1rem
    .light
      background: $color-light-footer-mobile-2
    .night
      background: $color-night-footer-mobile-2
    text-align: center

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 10px
        width: 20%
        vertical-align: middle

  #toc-footer
    clear: both
    padding-top: 1rem
    padding-bottom: 1rem
    .light
      background: $color-light-footer-mobile-2
    .night
      background: $color-night-footer-mobile-2
    text-align: left

    ol
      margin: 0
      padding-left: 20px
      list-style-type: none

      li
        line-height: 30px

    a:hover
      .light &
        color: $color-light-link
      .night &
        color: $color-night-link

    .toc-level-1 > .toc-link
      display: none

    .toc-level-2
      .light &
        color: $color-light-text
      .night &
        color: $color-night-text
      font-size: .8rem

      &:before
        .light &
          color: $color-light-accent-1
        .night &
          color: $color-night-accent-1
        content: "#"

    .toc-level-3
      .night &
        color: $color-night-meta
      .light &
        color: $color-light-meta
      font-size: .7rem
      line-height: 15px

    .toc-level-4
      display: none

    .toc-level-5
      display: none

    .toc-level-6
      display: none

    .toc-number
      display: none

@media screen and (min-width: 500px)
  #footer-post-container
    display: none
