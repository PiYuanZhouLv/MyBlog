.pagination
  display: inline-block
  margin-top: 2rem
  width: 100%
  text-align: center

  .page-number
    .night &
      color: $color-night-text
    .light &
      color: $color-light-text
    font-size: .8rem

  a
    padding: 4px 6px
    border-radius: 5px
    // background-color: $color-accent-1
    background-image: none
    .night &
      color: $color-night-text
    .light &
      color: $color-light-text
    text-decoration: none

  a:hover
    background-image: none

  a:hover:not(.active)
    .night &
      color: $color-night-accent-2
    .light &
      color: $color-light-accent-2
