// Code

.night
  @import "_highlight/" + $highlight-night
.light
  @import "_highlight/" + $highlight-light

pre
  overflow-x: auto
  padding: 10px 15px
  padding-bottom: 0
  .night &
    border: 1px dotted $color-night-border
  .light &
    border: 1px dotted $color-light-border
  border-radius: 4px
  font-size: 13px
  font-family: $font-family-mono
  line-height: 22px
  -webkit-border-radius: 4px

  code
    display: block
    padding: 0
    border: none

code
  padding: 0 5px
  .night &
    border: 1px dotted $color-night-border
  .light &
    border: 1px dotted $color-light-border
  border-radius: 2px
  -webkit-border-radius: 2px

.highlight
  overflow-x: auto
  margin: 1rem 0
  padding: 10px 15px
  border-radius: 4px
  .night &
    background: $color-night-background-code
  .light &
    background: $color-light-background-code
  font-family: $font-family-mono
  // color: $color-accent-3
  -webkit-border-radius: 4px

  figcaption
    margin: -5px 0 5px
    .night &
      color: $color-night-meta-code
    .light &
      color: $color-light-meta-code
    font-size: .9em
    transform: scale(1)

    a
      float: right
      .night &
        color: $color-night-meta-code
      .light &
        color: $color-light-meta-code
      font-style: italic
      font-size: .8em

      .night &
        underline(10px, $color-night-link)
      .light &
        underline(10px, $color-light-link)

    a:hover
      .night &
        color: lighten($color-night-meta-code, 20%)
      .light &
        color: lighten($color-light-meta-code, 20%)

    &:before, content: ""
      display: table

    &:after
      clear: both

  &:hover 
    .btn-copy
      opacity: 1

  .btn-copy
    font-size: 1.2rem
    position: absolute
    right: 20px
    opacity: 0
    transition: opacity 0.2s ease-in
    .night &:hover
      color: $color-night-accent-1
    .light &:hover
      color: $color-light-accent-1

  pre
    margin: 0
    padding: 0
    border: none
    background: none

  table
    width: auto

  td.gutter
    text-align: right
    opacity: .2

  .line
    height: 22px

#header-post #actions
  direction: ltr !important
