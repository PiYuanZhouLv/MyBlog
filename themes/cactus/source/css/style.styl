@import "_variables"
// @import "_colors/" + $colors
// dark
$color-night-background = #1d1f21
$color-night-footer-mobile-1 = lighten($color-night-background, 2%)
$color-night-footer-mobile-2 = lighten($color-night-background, 10%)
$color-night-background-code = lighten($color-night-background, 2%)
$color-night-border = #908d8d
$color-night-scrollbar = #999
$color-night-meta = #908d8d
$color-night-meta-code = #908d8d
$color-night-link = rgba(212, 128, 170, 1)
$color-night-text = #c9cacc
$color-night-accent-3 = #cccccc
$color-night-accent-2 = #eeeeee
$color-night-accent-1 = #2bbc8a
$color-night-quote = #ccffb6

//white
$color-light-background = #FFFFFF
$color-light-footer-mobile-1 = darken($color-light-background, 2%)
$color-light-footer-mobile-2 = darken($color-light-background, 10%)
$color-light-background-code = darken($color-light-background, 2%)
$color-light-border = #666
$color-light-scrollbar = #AAA
$color-light-meta = #666
$color-light-meta-code = lighten($color-light-meta, 10%)
$color-light-link = rgba(212, 128, 170, 1)
$color-light-text = #383838
$color-light-accent-3 = #8c8c8c
$color-light-accent-2 = #383838
$color-light-accent-1 = #2bbc8a
$color-light-quote = #2bbc8a

$highlight-night = hexo-config("highlight-night") || "rainbow"
$highlight-light = hexo-config("highlight-light") || "atelier-cave-light"

@import "_util"
@import "_mixins"
@import "_extend"
@import "_fonts"

global-reset()

*, *:before, *:after
  box-sizing: border-box

/* Scroll bar */
/* For Firefox */
// .night *
//   scrollbar-color: $color-night-scrollbar transparent

// .light *
//   scrollbar-color: $color-light-scrollbar transparent

/* For Chrome, Edge, and Safari */
*::-webkit-scrollbar
  width: 8px
  height: 6px

*::-webkit-scrollbar-track
  background: transparent

*::-webkit-scrollbar-thumb
  .night &
    background-color: $color-night-scrollbar
  .light &
    background-color: $color-light-scrollbar
  border-radius: 6px

*::-webkit-scrollbar-thumb:hover
  .night &
    background-color: darken($color-night-scrollbar, 20%)
  .light &
    background-color: darken($color-light-scrollbar, 20%)

*::-webkit-scrollbar-thumb:active
  .night &
    background-color: darken($color-night-scrollbar, 30%)
  .light &
    background-color: darken($color-light-scrollbar, 30%)

html
  margin: 0
  padding: 0
  height: 100%
  .night &
    border-top: 2px solid $color-night-text
  .light &
    border-top: 2px solid $color-light-text
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  margin: 0
  height: 100%
  .night &
    background-color: $color-night-background
    color: $color-night-text
  .light &
    background-color: $color-light-background
    color: $color-light-text
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  line-height: $line-height
  text-rendering: geometricPrecision

  antialias()

  @extend $base-style

.content
  position: relative
  display: flex
  flex-direction: column
  min-height: 100%
  overflow-wrap: break-word

  p
    hyphens(auto)

  code
    hyphens(manual)

  a
    .night &
      color: $color-night-text
    .light &
      color: $color-light-text
    text-decoration: none

    .night &
      underline(5px, $color-night-text)
    .light &
      underline(5px, $color-light-text)

    .night &:hover
      background-image: linear-gradient(transparent, transparent 4px, $color-night-link 4px, $color-night-link)
    .light &:hover
      background-image: linear-gradient(transparent, transparent 4px, $color-light-link 4px, $color-light-link)

  a.icon
    background: none

    .night &:hover
      color: $color-night-link
    .light &:hover
      color: $color-light-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: inherit
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    .night &
      underline(6px, $color-night-link)
    .light &
      underline(6px, $color-light-link)

  h6
    a
      background: none
      color: inherit
      text-decoration: none

  h6
    a:hover
      .night &
        underline(6px, $color-night-link)
      .light &
        underline(6px, $color-light-link)

@media (min-width: 540px)
  .image-wrap
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      flex: 1 0 35%
      margin-right: 2rem

    p
      flex: 1 0 65%

.max-width
  max-width: $page-width

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 1rem
    padding-left: 1rem

  .my4
    margin-top: 2rem
    margin-bottom: 2rem

@media (min-width: 480px)
  p
    text-align: justify

